<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" android:drawable="@drawable/menu_btn">
<shape
android:shape="rectangle">
<gradient
android:angle="270"
android:startColor="#FFFFFF" 
android:endColor="#FFFFFF"
android:type="linear" />
<corners
android:radius="5dp" />
<stroke
android:width="3dp"
android:color="#888888"/>
</shape>
</item>
