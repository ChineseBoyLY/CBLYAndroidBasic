<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#CCCCCC" android:startColor="#3E799F" android:type="linear" />

            <corners android:radius="5dp" />

            <stroke android:width="3dp" android:color="#999999" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#AAAAAA" android:startColor="#FFC0CB" android:type="linear" />

            <corners android:radius="5dp" />

            <stroke android:width="3dp" android:color="#999999" />
        </shape></item>

</selector>