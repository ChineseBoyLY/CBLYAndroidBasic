<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#AAAAAA" android:startColor="#DDDDEE" android:type="linear" />

            <corners android:radius="5dp" />

            <stroke android:width="2dp" android:color="#8F8F8F" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#F2F2F2" android:startColor="#F5F5DC" android:type="linear" />

            <corners android:radius="5dp" />

            <stroke android:width="2dp" android:color="#8F8F8F" />
        </shape></item>

</selector>